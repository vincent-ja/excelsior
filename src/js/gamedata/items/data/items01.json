{
    "Spellbook": {
        "Name": "Spellbook",
        "Desc": "A book that contains many powerful spells.",
        "Actions": [
            {
                "Name": "Summon a Bow & Arrow",
                "Click": {
                    "Behavior": "Spellbook.SummonBow"
                }
            }
        ]
    },
    "Bow & Arrow": {
        "Init": {
            "Behavior": "BowAndArrow.Init"
        },
        "AddedToInventory": {
            "Behavior": "BowAndArrow.AddedToInventory"
        },
        "Name": "Bow & Arrow",
        "Desc": "A wooden bow and a quiver full of arrows.",
        "Actions": [
            {
                "Name": "Shoot",
                "Condition": {
                    "Behavior": "BowAndArrow.HasArrows"
                },
                "Click": {
                    "Behavior": "BowAndArrow.Shoot"
                }
            },
            {
                "Name": "Dispose",
                "Condition": {
                    "Behavior": "BowAndArrow.HasArrows",
                    "Args": [ false ]
                },
                "Click": {
                    "Behavior": "Base.RemoveFromInventory"
                }
            }
        ]
    }
}